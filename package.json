{
  "name": "@sofarocean/code-loft",
  "version": "0.2.0",
  "description": "Standard build script combining Terraform and custom pre- and post- deploy options",
  "main": "build/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc -p .",
    "build:live": "nodemon --watch 'src/**' -e js,ts,jsx,tsx --exec 'tsc -p .'",
    "prepublish": "npm run build",
    "deploy": "npm publish --access public"
  },
  "bin": {
    "code-loft": "./build/index.js"
  },
  "author": "Sam Kronick <sam.kronick@sofarocean.com>",
  "license": "ISC",
  "dependencies": {
    "@types/child-process-promise": "^2.2.1",
    "@types/inquirer": "^6.5.0",
    "@types/node": "11.9.3",
    "chalk": "^3.0.0",
    "child-process-promise": "^2.2.1",
    "commander": "^5.0.0",
    "dotenv": "^8.2.0",
    "inquirer": "^7.1.0",
    "nodemon": "^2.0.2",
    "ts-node": "8.0.2",
    "typescript": "^3.8.2"
  }
}
